#!/bin/bash
# Landscape Mini - Build Configuration
# ============================================================

# Landscape Router release version ("latest" or tag like "v0.12.4")
LANDSCAPE_VERSION="latest"

# GitHub repository for landscape releases
LANDSCAPE_REPO="https://github.com/ThisSeanZhang/landscape"

# Debian release (trixie = Debian 13 testing, kernel 6.12+ with BTF/BPF)
DEBIAN_RELEASE="trixie"

# Disk image size in MB (final image will be shrunk, so bigger is fine)
IMAGE_SIZE_MB=2048

# Include Docker in the image (yes/no)
# Docker adds ~200-400MB to the image size
INCLUDE_DOCKER="no"

# Root password
ROOT_PASSWORD="landscape"

# Timezone
TIMEZONE="Asia/Shanghai"

# Locale
LOCALE="en_US.UTF-8"

# APT mirror (leave empty for default Debian mirror)
# Chinese mirrors for faster builds:
APT_MIRROR="${APT_MIRROR-https://mirrors.tuna.tsinghua.edu.cn/debian}"

# Output format: img, vmdk, both
OUTPUT_FORMAT="${OUTPUT_FORMAT-img}"

# Compress output image (yes/no)
COMPRESS_OUTPUT="${COMPRESS_OUTPUT-yes}"
